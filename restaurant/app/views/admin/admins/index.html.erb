            <a href="#"><li>Settings</li></a>
            <a href="<%= destroy_user_session_path%>"><li>Logout</li></a>
          </ul>
        </div>
      </nav>
      <button class="btn btn-info" style="margin-left:100px; margin-top:15px">Daily Revenue : <%= @daily_revenue%></button>
      <button class="btn btn-info" style="margin-left:100px; margin-top:15px">Weekly Revenue : <%= @weekly_revenue%></button>
      <button class="btn btn-info" style="margin-left:100px; margin-top:15px">Monthly Revenue : <%= @monthly_revenue%> </button>
      <button class="btn btn-info" style="margin-left:100px; margin-top:15px">Yearly Revenue : <%= @yearly_revenue%></button>
      <div class="container">
